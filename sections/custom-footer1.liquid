{% schema %}
{
  "name": "Custom Footer",
  "settings": [
    {
      "type": "text",
      "id": "footer_heading",
      "label": "Footer Heading",
      "default": "Our Company"
    },
    {
      "type": "richtext",
      "id": "footer_content",
      "label": "Footer Content",
      "default": "<p>This is an example of a rich text footer content section.</p>"
    },
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "color",
      "id": "footer_background_color",
      "label": "Footer Background Color",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "footer_font_color",
      "label": "Footer Font Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "footer_hover_color",
      "label": "Footer Link Hover Color",
      "default": "#1a1a1a"
    }
  ],
  "presets": [{
    "name": "Custom Footer",
    "category": "Footer"
  }]
}
{% endschema %}

