{% style %}
  .custom-footer {
    padding: 50px 0;
  }

  .custom-footer .footer-logo {
    margin-bottom: 20px;
  }

  .custom-footer h2 {
    margin-bottom: 10px;
  }

  .custom-footer i {
    font-size: 18px;
    color: rgb(153, 153, 153);
  }

  .custom-footer .footer-content {
    margin-bottom: 20px;
  }

  .custom-footer strong {
    font-weight: bold;
  }

  .custom-footer a {
    color: {{ section.settings.footer_font_color }};
    transition: color 0.3s ease;
  }

  .custom-footer a:hover {
      color: {{ section.settings.footer_hover_color }};
    }

  .custom-footer .container {
      max-width: 1200px;
      margin: auto;
    }
    .custom-footer .footer-logo {
      width: 115px;
    }
    .custom-footer .footer-row {
      width: 100%;
      display: flex;
      text-align: left;
    }
    .custom-footer .col-3 {
      width: 25%;
      padding: 0 20px;
    }
    .custom-footer .col-6 {
      width: 50%;
      padding: 0 15px;
    }

    .footer-row a {
      color: #51534a;
    }

    .custom-footer {
      font-size: 0.9em;
      font-family: "Nunito Sans", sans-serif;
    }

  @media only screen and (max-width: 550px) {
   .custom-footer .footer-row {
      flex-direction: column;
    }
    .custom-footer .col-3 {
      width: 100%;
      padding: 0 20px;
    }
    .custom-footer .klaviyo-form-col {
      width: 100%;
      text-align: center;
    }

    .footer-second-menu {
       display: flex;
    }

    .footer-second-menu p {
      width: 50%;
    }
  }
{% endstyle %}
