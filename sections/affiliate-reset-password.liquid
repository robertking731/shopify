{% schema %}
  {
    "name": "Affiliate Reset Password",
    "settings": []
  }
{% endschema %}
<div class="affiliate-registration affiliate-section ">
    <div class="t4s-container">
        <div class="col-inner">
            <form id="leaddyno-affiliate-lost-password-form" class="leaddyno-form" action="" method="POST">

                <!-- Notices -->

                <p>Lost your password? Please enter your email address. You will receive a link to create a new password
                    via email.</p>

                <!-- Email -->
                <div class="leaddyno-field-wrapper" data-type="email">

                    <div class="leaddyno-field-label-wrapper">
                        <label for="leaddyno-user-email">Email <span
                                class="leaddyno-field-required-marker">*</span></label>
                    </div>

                    <input id="leaddyno-user-email" required="" name="email" type="email" value="">

                </div>

                <!-- reCAPTCHA -->


                <!-- Action and nonce -->
                <input type="hidden" name="leaddyno_action" value="send_reset_password_email">
                <input type="hidden" id="leaddyno_token" name="leaddyno_token" value="f68fdca84c">
                <!-- Submit -->
                <a class="leaddyno-button-primary button primary" value="Reset password">
                    Reset password
                    </a>
            </form>


        </div>
    </div>
</div>